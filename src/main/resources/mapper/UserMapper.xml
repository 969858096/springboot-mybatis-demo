<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lsp.springbootmybatisdemo.mapper.UserMapper">
    <resultMap id="BaseResultMap" type="com.lsp.springbootmybatisdemo.entity.User">
        <id column="id" property="id" jdbcType="VARCHAR"/>
        <result column="name" property="name" jdbcType="VARCHAR"/>
        <result column="age" property="age" jdbcType="BIGINT"/>
    </resultMap>

    <resultMap type="com.lsp.springbootmybatisdemo.entity.Role" id="RoleMap">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="name" property="name" jdbcType="VARCHAR"/>
        <collection property="authorityList" column="id" javaType="list" select="selectAllAuthorities"></collection>
    </resultMap>

    <!--根据角色ID查找角色拥有的所有权限-->
    <select id="selectAllAuthorities" resultType="com.lsp.springbootmybatisdemo.entity.Authority" parameterType="java.lang.Integer">
    select id,name,url  from authority where id in (select role_authority.authorityId from role_authority where role_authority.roleId=#{id})
    </select>

    <!--根据用户Id查找所有的用户角色-->
    <select id="selectAllRoles" resultMap="RoleMap" parameterType="java.lang.Integer">
    select id, name from role where id in (select user_role.roleId from user_role where user_role.userId=#{id})
    </select>

    <sql id="Base_Column_List">
        *
    </sql>

    <select id="getAll" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM user
    </select>

    <insert id="add" parameterType="com.lsp.springbootmybatisdemo.entity.User" useGeneratedKeys="true" keyProperty="id">
        /*生成UUID*/
        <selectKey keyProperty="id" resultType="java.lang.String" order="BEFORE">
            select REPLACE(UUID(),'-','')
        </selectKey>
        INSERT INTO
        user
        (id, name, age,userName,passWord,phoneNum)
        VALUES
        (#{id},#{name},#{age},#{userName},#{passWord},#{phoneNum})
    </insert>

    <update id="update" parameterType="com.lsp.springbootmybatisdemo.entity.User">
        UPDATE
        user
        SET
        <if test="name != null">name = #{name},</if>
        <if test="age != null">age = #{age},</if>
        <if test="userName != null">userName = #{userName},</if>
        <if test="passWord != null">passWord = #{passWord},</if>
        <if test="phoneNum != null">phoneNum = #{phoneNum}</if>
        WHERE
        id = #{id}
    </update>

</mapper>